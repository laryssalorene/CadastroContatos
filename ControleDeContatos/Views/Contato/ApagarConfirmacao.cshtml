@model ContatoModel

@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center mb-3">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div> 

<a class="btn btn-primary w-100 mb-1" role="button" asp-Controller="Contato" asp-Action="Index">Cancelar exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>